---
const { prevUrl, nextUrl } = Astro.props;
---

{
	(prevUrl || nextUrl) && (
    <div id="buttons">
      <ul class="pagination">
        {prevUrl && (
          <li><a class="page-link" href={prevUrl.url} rel="prefetch" style={{ marginRight: '10px', marginBottom: '10px' }}>
            {prevUrl.srLabel && <span class="sr-only">{prevUrl.srLabel}</span>}
            <span set:html={prevUrl.text ? prevUrl.text : "Previous"}></span>
          </a></li>
        )}
        {nextUrl && (
          <li><a class="page-link" href={nextUrl.url} rel="prefetch">
            {nextUrl.srLabel && <span class="sr-only">{nextUrl.srLabel}</span>}
            <span set:html={nextUrl.text ? nextUrl.text : "Next"}></span>
          </a></li>
        )}
      </ul>
    </div>
	)
}
