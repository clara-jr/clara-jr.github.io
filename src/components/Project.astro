---
const { image, title, description, date, url } = Astro.props;
---

<div class="blog-items" id="about">
  <div class="project_photo">
    <img loading="lazy" alt="" style={{ borderRadius: '4px' }} src={image} />
  </div>
  <div>
    <h2 class="post-title">
      <span set:html={title} />
      <p style={{ fontSize: '22px', marginTop: '10px', marginBottom: '0px' }}>
        👉🏻
        <a target="_blank" class="page-link" href={url}> ¡Quiero saber más!</a>
      </p>
    </h2>
    <h3 class="post-subtitle project" set:html={description} />
    <p class="post-meta">{date}</p>
  </div>
</div>
<hr />
